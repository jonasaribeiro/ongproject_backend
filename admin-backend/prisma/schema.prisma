generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Movie Models
model Movie {
  id          String            @id @default(uuid())
  title       String
  description String
  pubYear     String
  categories  Category[]        @relation("MovieCategories")
  resolutions MovieResolution[] @relation("MovieResolutions")
  ageRatingId String?
  ageRating   AgeRating?        @relation("MovieAgeRatings", fields: [ageRatingId], references: [id])
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  active      Boolean           @default(false)
}

// Serie Models
model Serie {
  id          String     @id @default(uuid())
  title       String
  description String
  releaseYear String
  seasons     Season[]
  categories  Category[] @relation("SerieCategories")
  ageRatingId String?
  ageRating   AgeRating? @relation("SerieAgeRatings", fields: [ageRatingId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  active      Boolean    @default(false)
}

model Season {
  id           String    @id @default(uuid())
  serieId      String
  serie        Serie     @relation(fields: [serieId], references: [id])
  seasonNumber Int
  episodes     Episode[]
  active       Boolean   @default(false)
}

model Episode {
  id            String @id @default(uuid())
  title         String
  description   String
  seasonId      String
  season        Season @relation(fields: [seasonId], references: [id])
  episodeNumber Int
}

// Resolution Models
model MovieResolution {
  id     String  @id @default(uuid())
  name   String  @unique
  movies Movie[] @relation("MovieResolutions")
}

// Age Rating Models
model AgeRating {
  id     String  @id @default(uuid())
  name   String  @unique
  movies Movie[] @relation("MovieAgeRatings")
  series Serie[] @relation("SerieAgeRatings")
}

// Category Models
model Category {
  id     String  @id @default(uuid())
  name   String  @unique
  movies Movie[] @relation("MovieCategories")
  series Serie[] @relation("SerieCategories")
}
