generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Movie Models
model Movie {
  id          String            @id @default(uuid())
  title       String
  description String
  pubYear     String
  genres MovieGenre[] @relation("MovieGenres")
  resolutions MovieResolution[] @relation("MovieResolutions")
  ageRatingId String?
  ageRating   MovieAgeRating?        @relation("MovieAgeRatings", fields: [ageRatingId], references: [id])
}

model MovieResolution {
  id     String  @id @default(uuid())
  name   String  @unique
  movies Movie[] @relation("MovieResolutions")
}

model MovieAgeRating {
  id          String  @id @default(uuid())
  description String @unique
  movies      Movie[] @relation("MovieAgeRatings")
}

model MovieGenre {
  id String @id @default(uuid())
  name String @unique
  movies Movie[] @relation("MovieGenres")
}