generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id          String             @id @default(uuid())
  title       String
  description String
  pubDate     DateTime
  audioPath   String?
  resolutions MovieResolution[]  @relation("MovieResolutions")
}

model MovieResolution {
  id     String    @id @default(uuid())
  name   String    @unique
  movies Movie[]   @relation("MovieResolutions")
}

model Serie {
  id             String   @id @default(cuid())
  title          String   @unique
  description    String
  pubDate        DateTime
  seasons        Season[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Season {
  id         String   @id @default(cuid())
  serieId    String
  number     Int
  episodes   Episode[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  Serie      Serie   @relation(fields: [serieId], references: [id])
}

model Episode {
  id         String   @id @default(cuid())
  seasonId   String
  title      String
  description String
  mainPathSD String?
  mainPathHD String?
  mainPath4K String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  Season     Season  @relation(fields: [seasonId], references: [id])
}